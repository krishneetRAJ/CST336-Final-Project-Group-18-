<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Pet-ly</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <%- include("partials/navbar.ejs") %>

  <section class="bg-light text-center py-5">
    <div class="container">
      <h1 class="display-4 fw-bold">Find Your New Best Friend</h1>
      <p class="lead">Search adoptable pets near you</p>
      <form action="/search" method="GET" class="row justify-content-center g-2 mt-4">
        <div class="col-md-4">
          <select name="type" class="form-select">
            <option value="">Choose a Pet Type</option>
            <option value="dog">Dog</option>
            <option value="cat">Cat</option>
            <option value="rabbit">Rabbit</option>
          </select>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
      </form>
    </div>
  </section>

  <section class="container py-5">
    <h2 class="text-center mb-4">Featured Pets</h2>
    <div class="row">
      <% featuredPets.forEach(pet => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img src="<%= pet.image_url || '/images/default.jpg' %>" class="card-img-top" alt="<%= pet.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= pet.name %></h5>
              <p class="card-text"><%= pet.breed %> â€¢ <%= pet.age %></p>
              <button class="btn btn-outline-primary" data-id="<%= pet.id %>">Learn More</button>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
  <h3 class="mb-4">Manage Data</h3>
  <a href="/animals/add" class="btn btn-success me-2">Add New Animal</a>
  <a href="/pets/update" class="btn btn-warning">Update Pet</a>
  <section class="bg-secondary text-white py-5">
    <div class="container text-center">
      <h2>How It Works</h2>
      <div class="row mt-4">
        <div class="col-md-4">
          <h5>1. Search</h5>
          <p>Find pets by type, age, location, and more.</p>
        </div>
        <div class="col-md-4">
          <h5>2. Learn More</h5>
          
          <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<body>
</html>
